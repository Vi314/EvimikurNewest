@model IEnumerable<OrderDetailsDTO>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Entities/Views/Shared/_DashboardLayout.cshtml";
}
@if (TempData["Result"] != null)
{
	<span>@TempData["Result"]</span>
	TempData["Result"] = null;
}

<div class="d-flex justify-content-between">
	<span class="mt-2" style="font-family: sans-serif; font-size: 24px">Sipariş Detayları</span>
	<a class="btn btn-outline-success mt-auto" href="/Entities/OrderDetails/CreateOrderDetails"><i class="fa-solid fa-circle-plus fa-lg"></i> Sipariş Detayı Ekle</a>
</div>
<hr />
<div>
	<table class="table table-hover table-striped">
		<thead>
			<tr>
				<th>#</th>
				<th>Sipariş Id</th>
				<th>Ürün Adı</th>
				<th>Adet</th>
				<th>Fiyat</th>
				<th>Seçenekler</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model as List<OrderDetailsDTO>)
			{
				<tr>
					<td>@item.Id</td>
					<td>@item.OrderId</td>
					<td>@item.ProductName</td>
					<td>@item.Amount</td>
					<td>@item.Price</td>
					<td>
						<a class="btn btn-outline-warning" href="/Entities/OrderDetails/UpdateOrderDetails/@item.Id" style=" margin-right: 8px"><i class="fa-solid fa-repeat fa-lg"></i> Güncelle</a>
						<a class="btn btn-outline-danger" href="/Entities/OrderDetails/DeleteOrderDetails/@item.Id"><i class="fa-solid fa-trash fa-lg"></i> Sil</a>
					</td>
				</tr>
			}

		</tbody>
	</table>
</div>