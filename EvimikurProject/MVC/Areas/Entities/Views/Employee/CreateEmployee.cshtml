@{
    Layout = "_DashboardLayout";
}

<div>
    <form method="post">
        <div class="input-group mb-3">
            <span class="input-group-text">İsim</span>
            <input type="text" class="form-control" name="FirstName" />
        </div>
        <div class="input-group mb-3">
            <span class="input-group-text">Soyisim</span>
            <input type="text" class="form-control" name="LastName" />
        </div>
        <div class="input-group mb-3">
            <span class="input-group-text">Departman</span>
            <input type="text" class="form-control" name="Department" />
        </div>
        <div class="input-group mb-3">
            <span class="input-group-text">Unvan</span>
            <input type="text" class="form-control" name="Title" />
        </div>
        <div class="input-group mb-3">
            <span class="input-group-text">Eğitim Seviyesi</span>
            <input type="text" class="form-control" name="EducationLevel" />
        </div>
        <div class="input-group mb-3">
            <span class="input-group-text">Açık Adres</span>
            <textarea type="text" class="form-control" name="FullAddress"></textarea>
        </div>
        <div class="input-group mb-3">
            <span class="input-group-text">Bayii</span>
            <select class="form-select " name="Dealer" class="form-control">
                @foreach (var dealer in ViewBag.Dealers as List<Dealer>)
                {
                    <option>@dealer.Name</option>
                }
            </select>
        </div>
        <button class="btn btn-outline-success" type="submit">Kaydet</button>
    </form>
</div>
