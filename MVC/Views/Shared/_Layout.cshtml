<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - MVC</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/MVC.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="//cdn.datatables.net/1.13.4/css/jquery.dataTables.min.css" />
    <link rel="stylesheet" href="~/css/chosen.css"/>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid justify-content-between">
                <div>
                    <a class="navbar-brand mx-4" style="font-size: 36px;font-family:serif" asp-area="" asp-controller="Home" asp-action="Index">Evimikur</a>
                </div>
                    <a class="nav-link text-dark" style="font-size: 24px; font-family: serif; margin-left: auto; margin-right: 16px" asp-area="Entities" asp-controller="Home" asp-action="Index">Dashboard</a>
                <div>
                    <a class="nav-link text-dark" style="font-size: 24px; font-family: serif; margin-left: auto; margin-right: 4px" asp-controller="Home" asp-action="Login">Hesap Aç</a>
                </div>
                <div>
                    <a class="nav-link text-dark" style="font-size: 24px; font-family: serif; margin-left: auto; margin-right: 32px" asp-controller="Home" asp-action="Register">Kaydol</a>
                </div>
            </div>
        </nav>
    </header>
    <div>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>  
    
    <script src="https://kit.fontawesome.com/bb5f446011.js" crossorigin="anonymous"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/chosen.jquery.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/4.3.0/chart.min.js" integrity="sha512-mlz/Fs1VtBou2TrUkGzX4VoGvybkD9nkeXWJm3rle0DPHssYYx4j+8kIS15T78ttGfmOjH0lLaBXGcShaVkdkg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
