@using MVC.Models;
@model RegisterDTO
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container p-4" style="font-family:serif">
    <div class="row">
        <h2>Kaydol</h2>
        <hr />
        <form method="post">
            <span class="errorMessage" asp-validation-for="Email"></span>
            <div class="input-group mb-3">
                <span class="input-group-text">E-Posta</span>
                <input asp-for="Email" class="form-control" type="email" placeholder="ornek@outlook.com" />
            </div>
            <span class="errorMessage" asp-validation-for="Username"></span>
            <div class="input-group mb-3">
                <span class="input-group-text">Kullanıcı Adı</span>
                <input asp-for="Username" class="form-control" type="text" placeholder="ornek.kullaniciadi" />
            </div>
            <span class="errorMessage" asp-validation-for="Password"></span>
            <div class="input-group mb-3">
                <span class="input-group-text">Şifre</span>
                <input asp-for="Password" class="form-control" type="password" placeholder="" />
            </div>
            <span class="errorMessage" asp-validation-for="ConfirmPassword"></span>
            <div class="input-group mb-3">
                <span class="input-group-text">Şifre Tekrar</span>
                <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="" />
            </div>
            <button class="btn btn-outline-success" type="submit">Hesap Aç</button>
        </form>
    </div>
</div>
