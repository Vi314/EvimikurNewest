@model IEnumerable<EmployeeDTO>
@{
	Layout = "_DashboardLayout";
}
@if (TempData["Result"] != null)
{
	<span>@TempData["Result"]</span>
	TempData["Result"] = null;
}

<div class="d-flex justify-content-between">
	<span class="mt-2" style="font-family: sans-serif; font-size: 24px">Çalışanlar</span>
	<a class="btn btn-outline-success mt-auto" href="/Entities/Employee/CreateEmployee"><i class="fa-solid fa-circle-plus fa-lg"></i> Çalışan Ekle</a>
</div>
<hr />
<div>


	<table class="table table-hover table-striped">
		<thead>
			<tr>
				<th>#</th>
				<th>Ad</th>
				<th>Soyad</th>
				<th>Departman</th>
				<th>Unvan</th>
				<th>Eğitim Seviyesi</th>
				<th>Adresi</th>
				<th>Şube</th>
				<th>Seçenekler</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model as IEnumerable<EmployeeDTO>)
			{
				<tr>
					<td>@item.Id</td>
					<td>@item.FirstName</td>
					<td>@item.LastName</td>
					<td>@item.Department</td>
					<td>@item.Title</td>
					<td>@item.EducationLevel</td>
					<td>@item.FullAddress</td>
					<td>@item.DealerModel</td>
					<td>
						<a class="btn btn-outline-warning" href="/Entities/Employee/UpdateEmployee/@item.Id" style=" margin-right: 8px"><i class="fa-solid fa-repeat fa-lg"></i> Güncelle</a>
						<a onclick="confirmDelete('/Entities/Employee/DeleteEmployee/@item.Id')" class="btn btn-outline-danger" ><i class="fa-solid fa-trash fa-lg"></i> Sil</a>
					</td>
				</tr>
			}

		</tbody>
	</table>
</div>
