@{
    ViewData["Title"] = "_DashboardLayout";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="col-md-12">
    <div class="col-md-2 p-3 " style="float:left; ">
        <ul class="list-unstyled ps-0">
            <li class="mb-1">
                <i class="fa-solid fa-house fa-lg"></i>
                <a asp-area="Entities" asp-controller="Home" asp-action="Index" class="btn btn-outline-dark d-inline-flex rounded border-0 collapsed">
                    Home
                </a>
            </li>
            <hr>
            <li class="mb-1">
                <i class="fa-solid fa-user fa-lg"></i>
                <a asp-area="Entities" asp-controller="Employee" asp-action="Index" class="btn btn-outline-dark d-inline-flex align-items-center rounded border-0">
                    Çalışanlar
                </a>
            </li>
            <li class="mb-1">
                <i class="fa-solid fa-user fa-lg"></i>
                <a asp-area="Entities" asp-controller="EmployeeVacation" asp-action="Index" class="btn btn-outline-dark d-inline-flex align-items-center rounded border-0">
                    Çalışan İzinleri
                </a>
            </li>
            <li class="mb-1">
                <i class="fa-solid fa-user fa-lg"></i>
                <a asp-area="Entities" asp-controller="EmployeeEntryExit" asp-action="Index" class="btn btn-outline-dark d-inline-flex align-items-center rounded border-0">
                    Çalışan Giriş Çıkışları
                </a>
            </li>
            <li class="mb-1">
                <i class="fa-solid fa-user fa-lg"></i>
                <a asp-area="Entities" asp-controller="EmployeeInsuranceAction" asp-action="Index" class="btn btn-outline-dark d-inline-flex align-items-center rounded border-0">
                    Çalışan Sigorta Hareketleri
                </a>
            </li>
            <li class="mb-1">
                <i class="fa-solid fa-shop fa-lg"></i>
                <a asp-area="Entities" asp-controller="Dealer" asp-action="Index" class="btn btn-outline-dark d-inline-flex align-items-center rounded border-0 ">
                    Bayiiler
                </a>
            </li>
            <li class="mb-1">
                <i class="fa-solid fa-list fa-lg"></i>
                <a asp-area="Entities" asp-controller="Category" asp-action="Index" class="btn btn-outline-dark d-inline-flex align-items-center rounded border-0">
                    Kategoriler
                </a>
            </li>
            <li class="mb-1">
                <i class="fa-solid fa-box fa-lg"></i>
                <a asp-area="Entities" asp-controller="Product" asp-action="Index" class="btn btn-outline-dark d-inline-flex align-items-center rounded border-0">
                    Ürünler
                </a>
            </li>
            <li class="mb-1">
                <i class="fa-solid fa-boxes-stacked fa-lg"></i>
                <a asp-area="Entities" asp-controller="DealerStocks" asp-action="Index" class="btn btn-outline-dark d-inline-flex align-items-center rounded border-0 ">
                    Stoklar
                </a>
            </li>
            <li class="mb-1">
                <i class="fa-solid fa-tag fa-lg"></i>
                <a asp-area="Entities" asp-controller="Order" asp-action="Index" class="btn btn-outline-dark d-inline-flex align-items-center rounded border-0">
                    Siparişler
                </a>
            </li>
            <li class="mb-1">
                <i class="fa-solid fa-tags fa-lg"></i>
                <a asp-area="Entities" asp-controller="OrderDetails" asp-action="Index" class="btn btn-outline-dark d-inline-flex align-items-center rounded border-0">
                    Sipariş Detayları
                </a>
            </li>
            <li class="mb-1">
                <i class="fa-solid fa-truck fa-lg"></i>
                <a asp-area="Entities" asp-controller="Supplier" asp-action="Index" class="btn btn-outline-dark d-inline-flex align-items-center rounded border-0">
                    Tedarikçiler
                </a>
            </li>
            <li class="mb-1">
                <i class="fa-solid fa-file-lines fa-lg"></i>
                <a asp-area="Entities" asp-controller="SupplierContracts" asp-action="Index" class="btn btn-outline-dark d-inline-flex align-items-center rounded border-0 ">
                    Tedarikçi Sözleşmeleri
                </a>
            </li>
        </ul>
        <hr />
    </div>
    <div class="col-md-10 p-3 " style="float:left; ">
        @RenderBody()
    </div>
</div>