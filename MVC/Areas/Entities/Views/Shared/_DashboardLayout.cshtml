            </li>
            <li class="mb-1">
                <a asp-area="Entities" asp-controller="DealerStocks" asp-action="Index" class="btn btn-outline-dark d-inline-flex align-items-center rounded border-0 ">
                    <i class="fa-solid fa-boxes-stacked fa-lg"></i>
                    &nbsp; &nbsp; Stoklar
                </a>
            </li>
            <li class="mb-1">
                <a asp-area="Entities" asp-controller="Order" asp-action="Index" class="btn btn-outline-dark d-inline-flex align-items-center rounded border-0">
                    <i class="fa-solid fa-tag fa-lg"></i>
                    &nbsp; &nbsp; Siparişler
                </a>
            </li>
            <li class="mb-1">
                <a asp-area="Entities" asp-controller="OrderDetails" asp-action="Index" class="btn btn-outline-dark d-inline-flex align-items-center rounded border-0">
                    &nbsp;&nbsp;<i class="fa-solid fa-tags fa-lg"></i>
                    &nbsp; &nbsp;Sipariş Detayları
                </a>
            </li>
            <li class="mb-1">
                <a asp-area="Entities" asp-controller="SupplierOrder" asp-action="Index" class="btn btn-outline-dark d-inline-flex align-items-center rounded border-0">
                    <i class="fa-solid fa-tag fa-lg"></i>
                    &nbsp; &nbsp; Tedarikçi Siparişleri
                </a>
            </li>
            <li class="mb-1">
                <a asp-area="Entities" asp-controller="Supplier" asp-action="Index" class="btn btn-outline-dark d-inline-flex align-items-center rounded border-0">
                    <i class="fa-solid fa-truck fa-lg"></i>
                    &nbsp; &nbsp; Tedarikçiler
                </a>
            </li>
            <li class="mb-1">
                <a asp-area="Entities" asp-controller="SupplierContracts" asp-action="Index" class="btn btn-outline-dark d-inline-flex align-items-center rounded border-0 ">
                    <i class="fa-solid fa-file-lines fa-lg"></i>
                    &nbsp; &nbsp; Tedarikçi Sözleşmeleri
                </a>
            </li>
        </ul>
        <hr />
    </div>
    <div class="col-md-10 p-3 " style="float:left; ">
        @RenderBody()
    </div>
</div>

