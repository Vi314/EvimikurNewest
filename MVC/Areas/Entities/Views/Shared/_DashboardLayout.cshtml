                <a asp-area="Entities" asp-controller="EmployeeInsuranceAction" asp-action="Index" class="btn btn-outline-dark d-inline-flex align-items-center rounded border-0">
                    &nbsp;&nbsp;<i class="fa-solid fa-user fa-lg"></i>
                    &nbsp; &nbsp; Çalışan Sigorta Hareketleri
                </a>
            </li>
            <li class="mb-1">
                <a asp-area="Entities" asp-controller="Dealer" asp-action="Index" class="btn btn-outline-dark d-inline-flex align-items-center rounded border-0 ">
                    <i class="fa-solid fa-shop fa-lg"></i>
                    &nbsp; &nbsp; Bayiiler
                </a>
            </li>
            <li class="mb-1">
                <a asp-area="Entities" asp-controller="Category" asp-action="Index" class="btn btn-outline-dark d-inline-flex align-items-center rounded border-0">
                    <i class="fa-solid fa-list fa-lg"></i>
                    &nbsp; &nbsp; Kategoriler
                </a>
            </li>
            <li class="mb-1">
                <a asp-area="Entities" asp-controller="Product" asp-action="Index" class="btn btn-outline-dark d-inline-flex align-items-center rounded border-0">
                    <i class="fa-solid fa-box fa-lg"></i>
                    &nbsp; &nbsp;  Ürünler
                </a>
            </li>
            <li class="mb-1">
                <a asp-area="Entities" asp-controller="ProductPrice" asp-action="Index" class="btn btn-outline-dark d-inline-flex align-items-center rounded border-0">
                    <i class="fa-solid fa-box fa-lg"></i>
                    &nbsp; &nbsp;  Bayiilere Göre Fiyat Listeleri
