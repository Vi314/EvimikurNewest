@model List<DealerDto>
@{
    ViewData["Title"] = "Index";
	Layout = "_DashboardLayout";
}

@if (TempData["Result"] != null)
{
	<span>@TempData["Result"]</span>
	TempData["Result"] = null;
}

<div class="d-flex justify-content-between">
	<span class="mt-2" style="font-family: sans-serif; font-size: 24px">Bayiiler</span>
	<a class="btn btn-outline-success mt-auto" href="/Entities/Dealer/CreateDealer"><i class="fa-solid fa-circle-plus fa-lg"></i> Bayii Ekle</a>
</div>
<hr />
<div>
	<table class="table table-hover table-striped">
		<thead>
			<tr>
				<th>#</th>
				<th>Bayii Adı</th>
				<th>Adresi</th>
				<th>Seçenekler</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model as List<DealerDto>)
			{
				<tr>
					<td>@item.Id</td>
					<td>@item.Name</td>
					<td>@item.Format(item.FullAddress ?? "Adres Yok", 50)</td>
					<td>
						<a class="btn btn-outline-warning" href="/Entities/Dealer/UpdateDealer/@item.Id" style=" margin-right: 8px"><i class="fa-solid fa-repeat fa-lg"></i> Güncelle</a>
						<a onclick="confirmDelete('/Entities/Dealer/DeleteDealer/@item.Id')" class="btn btn-outline-danger"><i class="fa-solid fa-trash fa-lg"></i> Sil</a>
					</td>
				</tr>
			}

		</tbody>
	</table>
</div>


