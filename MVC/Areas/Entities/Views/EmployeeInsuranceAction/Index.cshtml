@model List<EmployeeInsuranceActionDTO>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Entities/Views/Shared/_DashboardLayout.cshtml";
}

@if (TempData["Result"] != null)
{
	<span>@TempData["Result"]</span>
	TempData["Result"] = null;
}

<div class="d-flex justify-content-between">
	<span class="mt-2" style="font-family: sans-serif; font-size: 24px">Çalışan Sigorta Hareketleri</span>
	<a class="btn btn-outline-success mt-auto" href="/Entities/EmployeeInsuranceAction/CreateEmployeeInsuranceAction"><i class="fa-solid fa-circle-plus fa-lg"></i> Sigorta Hareketi Ekle</a>
</div>
<hr />
<div>


	<table class="table table-hover table-striped">
		<thead>
			<tr>
				<th>#</th>
				<th>Çalışan Adı</th>
				<th>Hastane</th>
				<th>Açıklama</th>
				<th>Tarih</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model as IEnumerable<EmployeeInsuranceActionDTO>)
			{
				<tr>
					<td>@item.Id</td>
					<td>@item.EmployeeName</td>
					<td>@item.Hospital</td>
					<td>@item.Operation</td>
					<td>@item.Date</td>
					<td>
						<a class="btn btn-outline-warning" href="/Entities/EmployeeInsuranceAction/UpdateEmployeeInsuranceAction/@item.Id" style=" margin-right: 8px"><i class="fa-solid fa-repeat fa-lg"></i> Güncelle</a>
						<a class="btn btn-outline-danger" href="/Entities/EmployeeInsuranceAction/DeleteEmployeeInsuranceAction/@item.Id"><i class="fa-solid fa-trash fa-lg"></i> Sil</a>
					</td>
				</tr>
			}

		</tbody>
	</table>
</div>
