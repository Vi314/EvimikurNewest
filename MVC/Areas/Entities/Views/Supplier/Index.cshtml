@model List<SupplierDTO>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Entities/Views/Shared/_DashboardLayout.cshtml";
}
@if (TempData["Result"] != null)
{
    <span>@TempData["Result"]</span>
    TempData["Result"] = null;
}

<div class="d-flex justify-content-between">
    <span class="mt-2" style="font-family: sans-serif; font-size: 24px">Tedarikçiler</span>
    <a class="btn btn-outline-success mt-auto" href="/Entities/Supplier/CreateSupplier"><i class="fa-solid fa-circle-plus fa-lg"></i> Tedarikçi Ekle</a>
</div>
<hr />
<div>
    <table class="table table-hover table-striped">
        <thead>
        <tr>
            <th>#</th>
            <th>Şirket Adı</th>
            <th>Şirket Puanı</th>
            <th>Onaylı Mı</th>
                <th>Seçenekler</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model as List<SupplierDTO>)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.CompanyName</td>
                <td>@item.SupplierGrade</td>
                <td>@item.ApprovalState</td>
                <td>
                        <a class="btn btn-outline-warning" href="/Entities/Supplier/UpdateSupplier/@item.Id" style=" margin-right: 8px"><i class="fa-solid fa-repeat fa-lg"></i> Güncelle</a>
                        <a class="btn btn-outline-danger" href="/Entities/Supplier/DeleteSupplier/@item.Id"><i class="fa-solid fa-trash fa-lg"></i> Sil</a>
                </td>
            </tr>
        }

        </tbody>
    </table>
</div>

