@model List<ProductDto>
@{
	Layout = "_DashboardLayout";
}

<div class="d-flex justify-content-between">
	<span class="mt-2" style="font-family: sans-serif; font-size: 24px">Ürünler</span>
	<a class="btn btn-outline-success mt-auto" href="/Entities/Product/Create"><i class="fa-solid fa-circle-plus fa-lg"></i> Ürün Ekle</a>
</div>
<hr />
<div>
	<table class="table table-hover table-striped">
		<thead>
			<tr>
				<th>#</th>
				<th>Ürün Adı</th>
				<th>Açıklama</th>
				<th>Kategorisi</th>
				<th>PotansiyelSatışKriteri</th>
				<th>Seçenekler</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model as List<ProductDto>)
			{
				<tr>
					<td>@item.Id</td>
					<td>@item.Name</td>
					<td>@item.Format(item.Description ?? "Açıklama Yok", 50)</td>
					<td>@item.Category</td>
					<td>@item.PotentialSalesGrade</td>
					<td>
						<a class="btn btn-outline-warning" href="/Entities/Product/Update/@item.Id" style=" margin-right: 8px"><i class="fa-solid fa-repeat fa-lg"></i> Güncelle</a>
						<a onclick="confirmDelete('/Entities/Product/Delete/@item.Id')" class="btn btn-outline-danger" ><i class="fa-solid fa-trash fa-lg"></i> Sil</a>
					</td>
				</tr>
			}

		</tbody>
	</table>
</div>

