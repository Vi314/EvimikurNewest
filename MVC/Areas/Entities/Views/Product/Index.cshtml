@model List<ProductDTO>
@{
	Layout = "_DashboardLayout";
}
@if (TempData["Result"] != null)
{
	<span>@TempData["Result"]</span>
	TempData["Result"] = null;
}

<div class="d-flex justify-content-between">
	<span class="mt-2" style="font-family: sans-serif; font-size: 24px">Ürünler</span>
	<a class="btn btn-outline-success mt-auto" href="/Entities/Product/CreateProduct"><i class="fa-solid fa-circle-plus fa-lg"></i> Ürün Ekle</a>
</div>
<hr />
<div>
	<table class="table table-hover table-striped">
		<thead>
			<tr>
				<th>#</th>
				<th>Ürün Adı</th>
				<th>Açıklama</th>
				<th>Kategorisi</th>
				<th>PotansiyelSatışKriteri</th>
				<th>Seçenekler</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model as List<ProductDTO>)
			{
				<tr>
					<td>@item.Id</td>
					<td>@item.Name</td>
					<td>@item.Description</td>
					<td>@item.Category</td>
					<td>@item.PotentialSalesGrade</td>
					<td>
						<a class="btn btn-outline-warning" href="/Entities/Product/UpdateProduct/@item.Id" style=" margin-right: 8px"><i class="fa-solid fa-repeat fa-lg"></i> Güncelle</a>
						<a class="btn btn-outline-danger" href="/Entities/Product/DeleteProduct/@item.Id"><i class="fa-solid fa-trash fa-lg"></i> Sil</a>
					</td>
				</tr>
			}

		</tbody>
	</table>
</div>

