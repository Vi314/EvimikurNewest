@model List<EmployeeEntryExitDTO>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Entities/Views/Shared/_DashboardLayout.cshtml";
}

@if (TempData["Result"] != null)
{
	<span>@TempData["Result"]</span>
	TempData["Result"] = null;
}
<div class="d-flex justify-content-between">
	<span class="mt-2" style="font-family: sans-serif; font-size: 24px">Çalışan Giriş Çıkışları</span>
	<a class="btn btn-outline-success mt-auto" href="/Entities/EmployeeEntryExit/CreateEmployeeEntryExit"><i class="fa-solid fa-circle-plus fa-lg"></i> Giriş/Çıkış Ekle</a>
</div>
<hr />
<div>
	<table class="table table-hover table-striped">
		<thead>
			<tr>
				<th>#</th>
				<th>Çalışan Adı</th>
				<th>Giriş Tarihi</th>
				<th>Çıkış Tarihi</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model as IEnumerable<EmployeeEntryExitDTO>)
			{
				<tr>
					<td>@item.Id</td>
					<td>@item.EmployeeName</td>
					<td>@item.Entry.GetDateTimeFormats('f').FirstOrDefault()</td>
					<td>@item.Exit.GetDateTimeFormats('f').FirstOrDefault()</td>
					<td>
						<a class="btn btn-outline-warning" href="/Entities/EmployeeEntryExit/UpdateEmployeeEntryExit/@item.Id" style=" margin-right: 8px"><i class="fa-solid fa-repeat fa-lg"></i> Güncelle</a>
						<a class="btn btn-outline-danger" href="/Entities/EmployeeEntryExit/DeleteEmployeeEntryExit/@item.Id"><i class="fa-solid fa-trash fa-lg"></i> Sil</a>
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>
