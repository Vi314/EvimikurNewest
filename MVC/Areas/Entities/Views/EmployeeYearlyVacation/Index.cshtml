@model List<EmployeeYearlyVacationDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Entities/Views/Shared/_DashboardLayout.cshtml";
}
@if (TempData["Result"] != null)
{
    <span>@TempData["Result"]</span>
    TempData["Result"] = null;
}

<div class="d-flex justify-content-between">
    <span class="mt-2" style="font-family: sans-serif; font-size: 24px">Çalışan Yıllık İzinleri</span>
    <div>
        <a class="btn btn-outline-secondary mt-auto" href="/Entities/EmployeeYearlyVacation/CalculateAll"><i class="fa-solid fa-calculator fa-lg"></i> Toplu Hesapla</a>
        <a class="btn btn-outline-success mt-auto" href="/Entities/EmployeeYearlyVacation/Create"><i class="fa-solid fa-circle-plus fa-lg"></i> Yıllık İzin Ekle</a>
    </div>
</div>
<hr />
<div>
    <table class="table table-hover table-striped">
        <thead>
            <tr>
                <th>#</th>
                <th>Çalışan Adı</th>
                <th>Yıl</th>
                <th>Yıllık İzin(Gün)</th>
                <th>Kullanılan İzin(Gün)</th>
                <th>Seçenekler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model as IEnumerable<EmployeeYearlyVacationDto>)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.EmployeeName</td>
                    <td>@item.Year</td>
                    <td>@item.YearlyVacationDays</td>
                    <td>@item.VacationDaysUsed</td>
                    <td>
                        <a onclick="confirmDelete('/Entities/EmployeeYearlyVacation/Delete/@item.Id')" class="btn btn-outline-danger" ><i class="fa-solid fa-trash fa-lg"></i> Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>



